/**
 * Global styles for the application.
 * Uses Tailwind CSS v4 with flowbite plugin.
 */

/* Import Tailwind CSS */
@import "tailwindcss";

/* Enable Flowbite plugin for component styles */
@plugin "flowbite/plugin";

/* Define dark mode variant */
@custom-variant dark (&:where(.dark, .dark *));

/* Include Flowbite Svelte component styles */
@source "../node_modules/flowbite-svelte/dist";
